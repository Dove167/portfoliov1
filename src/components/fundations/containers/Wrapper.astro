---
interface Props {
  variant?: 'standard' | 'wide' | 'narrow';
  class?: string;
}

const { variant = 'standard', class: className } = Astro.props;

const variantClasses = {
  standard: 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8',
  wide: 'max-w-full mx-auto px-4 sm:px-6 lg:px-8',
  narrow: 'max-w-4xl mx-auto px-4 sm:px-6 lg:px-8',
};
---

<div class={`${variantClasses[variant]} ${className || ''}`}>
  <slot />
</div>
