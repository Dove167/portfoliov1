---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Josh Fajardo - Full Stack Developer",
  description = "Full Stack Web Developer specializing in React, Next.js, and AI-driven tools."
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>
<meta name="description" content={description} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
