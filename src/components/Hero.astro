<section class="relative min-h-screen overflow-hidden">
  <!-- Sailboat Background -->
  <div class="absolute inset-0">
    <img 
      src="/images/sailboat-hero.jpeg"
      alt="Sailboat on calm ocean at night"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#1B2933]/50 to-[#1B2933]"></div>
  </div>
  
  <!-- Animated Stars Overlay -->
  <div class="absolute inset-0 opacity-60">
    <div class="star star-1"></div>
    <div class="star star-2"></div>
    <div class="star star-3"></div>
    <div class="star star-4"></div>
    <div class="star star-5"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 flex items-center justify-center min-h-screen px-4">
    <div class="text-center text-white max-w-4xl">
      <h1 class="text-6xl md:text-8xl font-bold mb-6 tracking-tight">
        Josh Fajardo
      </h1>
      <p class="text-2xl md:text-3xl text-[#D3CCB9] mb-8">
        Full Stack Developer
      </p>
      <p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto mb-12 leading-relaxed">
        From shop floors to code floors â€” a developer forged through resilience. 
        Explore my journey below.
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/projects"
          class="px-8 py-4 bg-[#D3CCB9] text-[#1B2933] font-semibold rounded-lg hover:bg-[#898371] transition-colors duration-200"
        >
          View Projects
        </a>
        <a 
          href="/contact"
          class="px-8 py-4 border-2 border-[#D3CCB9] text-[#D3CCB9] font-semibold rounded-lg hover:bg-[#D3CCB9]/10 transition-colors duration-200"
        >
          Get In Touch
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-[#D3CCB9]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  .star {
    position: absolute;
    width: 3px;
    height: 3px;
    background: #D3CCB9;
    border-radius: 50%;
    box-shadow: 0 0 6px #D3CCB9;
    animation: twinkle 3s infinite ease-in-out;
  }
  
  .star-1 { 
    top: 15%; 
    left: 20%; 
    animation-delay: 0s; 
  }
  
  .star-2 { 
    top: 25%; 
    right: 30%; 
    animation-delay: 1s;
    width: 2px;
    height: 2px;
  }
  
  .star-3 { 
    top: 45%; 
    left: 15%; 
    animation-delay: 2s; 
  }
  
  .star-4 { 
    bottom: 35%; 
    right: 20%; 
    animation-delay: 1.5s;
    width: 2.5px;
    height: 2.5px;
  }
  
  .star-5 { 
    top: 60%; 
    left: 50%; 
    animation-delay: 0.5s;
    width: 2px;
    height: 2px;
  }
  
  @keyframes twinkle {
    0%, 100% { 
      opacity: 0.3; 
      transform: scale(1); 
    }
    50% { 
      opacity: 1; 
      transform: scale(1.5); 
    }
  }
</style>
